rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all collections by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow contact form submissions with rate limiting and field validation
    match /contacts/{contactId} {
      allow create: if
        // Validate required fields
        request.resource.data.keys().hasAll(['name', 'email', 'message', 'createdAt']) &&
        // Validate field types
        request.resource.data.name is string &&
        request.resource.data.email is string &&
        request.resource.data.message is string &&
        request.resource.data.createdAt is timestamp &&
        // Validate field content
        request.resource.data.name.size() > 0 &&
        request.resource.data.name.size() < 100 &&
        request.resource.data.email.size() > 0 &&
        request.resource.data.email.size() < 100 &&
        request.resource.data.email.matches('^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$') &&
        request.resource.data.message.size() > 0 &&
        request.resource.data.message.size() < 1000 &&
        // Rate limit submissions to 1 per minute from the same IP
        request.time > resource.data.createdAt + duration.value(1, 'm');

      // Allow admin access to read all contacts
      allow read: if request.auth != null;
    }
  }
}